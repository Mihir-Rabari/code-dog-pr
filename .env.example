# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codedog

# AI Service Configuration (Ollama)
OLLAMA_URL=http://localhost:11434
AI_MODEL=deepseek-r1:1.5b

# GitHub API (Optional - for enhanced repository metadata)
GITHUB_TOKEN=your_github_personal_access_token_here

# Docker Configuration
WORKSPACE_DIR=./workspace
MAX_COMMITS=50

# Security Configuration
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analysis Configuration
MAX_ANALYSIS_TIME_MS=1800000
MAX_CONTAINER_MEMORY_MB=512
MAX_CONTAINER_CPU_SHARES=512

# Frontend Configuration (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your_webhook_secret_here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Sentry Configuration (Optional - for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# Analytics Configuration (Optional)
ANALYTICS_API_KEY=your_analytics_key_here